            </view>
            <view class="info-item">
                <text class="info-key">户籍</text>
                <text class="info-value">上海市浦东新区</text>
            </view>
            <view class="info-item">
                <text class="info-key">学历</text>
                <text class="info-value">本科</text>
            </view>
        </view>
        <view class="base-info">
            <view class="info-item">
                <text class="info-key">婚姻状况</text>
                <text class="info-value">未婚</text>
            </view>
            <view class="info-item">
                <text class="info-key">职业</text>
                <text class="info-value">研发工程师</text>
            </view>
