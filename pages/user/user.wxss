/* pages/user/user.wxss */
page{
    background: rgb(245, 245, 245);
}
.back-img{
    position: absolute;
    width: 100%;
    height: 350rpx;
    background: rgb(190, 12, 12);
}
.user-card{
    position: absolute;
    top: 200rpx;
    width: 700rpx;
    background: #fff;
    left: 25rpx;
    border-radius: 25rpx;
}
.user-icon{
    height: 150rpx;
    width: 150rpx;
    border-radius: 50%;
    position: absolute;
    top: -75rpx;
    left:50%;
    margin-left: -75rpx;
    background: blueviolet;
}
.info-value{
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 8rpx;
}
.birth{
    width: 100%;
    position: absolute;
    top: 100rpx;
    text-align: center;
}
.info-grid{
    display: flex;
    flex-direction: column;
    margin-top: 180rpx;
    margin-bottom: 20rpx;
}
.base-info{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-bottom: 25rpx;
}
.info-item{
    display: flex;
    flex-direction: column;
    width: 200rpx;
    margin-left: 30rpx;
}
.desc-bd{
    margin-left: 30rpx;
    margin-bottom: 30rpx;
}
.title{
    font-size: 34rpx;
    font-weight: bold;
}
.desc{
    font-weight: normal;
    margin-right: 30rpx;
    background: rgb(245, 245, 245);
    padding: 15rpx 10rpx;
    border-radius: 8rpx;
}